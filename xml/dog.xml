<mujoco model="dog">
  <compiler angle="degree"/>
  <option timestep="0.001" gravity="0 0 -9.81"/>

  <default>
    <equality solref="0.005 1" />
    <geom type="box" size="0.05 0.02 0.02" density="500" rgba="0.2 0.7 0.2 1"/>
    <joint limited="true" range="-300 300" damping="0.2" stiffness="5"/>
    <motor ctrllimited="true" ctrlrange="-3 3"/>
  </default>

  <worldbody>
    <!-- main body -->
    <body name="main_body" pos="0 0 0.26">
      <freejoint name="main_free"/>
      <geom name="torso" type="box" size="0.20 0.03 0.03" pos="0.0 0 0"/>

      <!-- Leg 1 : front left -->
      <body name="fl_shoulder" pos="0.20 0.05 -0.01">
        <joint name="fl_shoulder_yaw" type="hinge" axis="1 0 0" pos="0.0 0 0"/>
        <geom name="fl_shoulder_geom" type="box" size="0.05 0.02 0.02" pos="0.0 0.0 0.0"/>
        <body name="fl_elbow" pos="0.0 0.02 -0.07">
          <joint name="fl_elbow_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
          <geom name="fl_elbow_geom" type="box" size="0.01 0.01 0.05" pos="0.0 0.0 0.0"/>
          <body name="fl_arm" pos="0.0 -0.02 -0.10">
            <joint name="fl_arm_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
            <geom name="fl_arm_geom" type="box" size="0.01 0.01 0.05" pos="0 0 0"/>
            <body name="fl_foot" pos="0.0 0.0 -0.05">
              <geom name="fl_foot_geom" type="sphere" size="0.02" pos="0 0 0"/>
            </body>
          </body>
        </body>
      </body>

      <!-- Leg 2 : back left -->
      <body name="bl_shoulder" pos="-0.20 0.05 -0.01">
        <joint name="bl_shoulder_yaw" type="hinge" axis="1 0 0" pos="0.0 0 0"/>
        <geom name="bl_shoulder_geom" type="box" size="0.05 0.02 0.02" pos="0 0 0"/>
        <body name="bl_elbow" pos="0.0 0.02 -0.07">
          <joint name="bl_elbow_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
          <geom name="bl_elbow_geom" type="box" size="0.01 0.01 0.05" pos="0 0 0"/>
          <body name="bl_arm" pos="0.0 -0.02 -0.10">
            <joint name="bl_arm_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
            <geom name="bl_arm_geom" type="box" size="0.01 0.01 0.05" pos="0 0 0"/>
            <body name="bl_foot" pos="0.0 0.0 -0.05">
              <geom name="bl_foot_geom" type="sphere" size="0.02" pos="0 0 0"/>
            </body>
          </body>
        </body>
      </body>

      <!-- Leg 3 : front right -->
      <body name="fr_shoulder" pos="0.20 -0.05 -0.01">
        <joint name="fr_shoulder_yaw" type="hinge" axis="1 0 0" pos="0.0 0 0"/>
        <geom name="fr_shoulder_geom" type="box" size="0.05 0.02 0.02" pos="0 0 0"/>
        <body name="fr_elbow" pos="0.00 -0.02 -0.07">
          <joint name="fr_elbow_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
          <geom name="fr_elbow_geom" type="box" size="0.01 0.01 0.05" pos="0 0 0"/>
          <body name="fr_arm" pos="0.0 0.02 -0.10">
            <joint name="fr_arm_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
            <geom name="fr_arm_geom" type="box" size="0.01 0.01 0.05" pos="0 0 0"/>
            <body name="fr_foot" pos="0.0 0.0 -0.05">
              <geom name="fr_foot_geom" type="sphere" size="0.02" pos="0 0 0"/>
            </body>
          </body>
        </body>
      </body>

      <!-- Leg 4 : back right -->
      <body name="br_shoulder" pos="-0.20 -0.05 -0.01">
        <joint name="br_shoulder_yaw" type="hinge" axis="1 0 0" pos="0.0 0 0"/>
        <geom name="br_shoulder_geom" type="box" size="0.05 0.02 0.02" pos="0 0 0"/>
        <body name="br_elbow" pos="0.0 -0.02 -0.07">
          <joint name="br_elbow_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
          <geom name="br_elbow_geom" type="box" size="0.01 0.01 0.05" pos="0 0 0"/>
          <body name="br_arm" pos="0.0 0.02 -0.10">
            <joint name="br_arm_pitch" type="hinge" axis="0 1 0" pos="0.0 0 0.05"/>
            <geom name="br_arm_geom" type="box" size="0.01 0.01 0.05" pos="0 0 0"/>
            <body name="br_foot" pos="0.0 0.0 -0.05">
              <geom name="br_foot_geom" type="sphere" size="0.02" pos="0 0 0"/>
            </body>
          </body>
        </body>
      </body>


    </body>
  </worldbody>
</mujoco>
